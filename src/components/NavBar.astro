---
import BurgerMenu from "../icons/BurgerMenu.astro";
---

<nav
   class="fixed top-0 left-0 right-0 z-50 bg-zinc-950/80 backdrop-blur-sm border-b border-zinc-800"
>
   <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
         <div
            class="w-8 h-8 bg-emerald-500 rounded-lg flex items-center justify-center"
         >
            <svg
               class="w-5 h-5 text-white"
               fill="none"
               stroke="currentColor"
               viewBox="0 0 24 24"
            >
               <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
               ></path>
            </svg>
         </div>
         <span class="text-lg font-semibold">Lyrics Overlay</span>
      </div>
      <div class="hidden md:flex items-center gap-6">
         <a
            href="#features"
            class="text-zinc-400 hover:text-white transition-colors text-sm"
            >Features</a
         >
         <a
            href="#downloads"
            class="text-zinc-400 hover:text-white transition-colors text-sm"
            >Downloads</a
         >
         <a
            href="#how-it-works"
            class="text-zinc-400 hover:text-white transition-colors text-sm"
            >How it works</a
         >
         <a
            href="https://github.com/ChristianPE1/lyrics-overlay"
            target="_blank"
            class="flex items-center gap-2 text-zinc-400 hover:text-white transition-colors text-sm"
         >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
               <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"
               ></path>
            </svg>
            GitHub
         </a>
      </div>
      <div class="md:hidden">
         <details class="relative">
            <summary class="cursor-pointer list-none">
               <BurgerMenu />
            </summary>
            <div
               class="absolute right-0 mt-2 w-48 bg-zinc-800 rounded-md shadow-lg py-2"
            >
               <a
                  href="#features"
                  class="block px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-700 transition-colors"
                  >Features</a
               >
               <a
                  href="#downloads"
                  class="block px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-700 transition-colors"
                  >Downloads</a
               >
               <a
                  href="#how-it-works"
                  class="block px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-700 transition-colors"
                  >How it works</a
               >
               <a
                  href="https://github.com/ChristianPE1/lyrics-overlay"
                  target="_blank"
                  class="flex items-center gap-2 px-4 py-2 text-sm text-zinc-400 hover:text-white hover:bg-zinc-700 transition-colors"
               >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                     <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"
                     ></path>
                  </svg>
                  GitHub
               </a>
            </div>
         </details>
      </div>
   </div>
</nav>
